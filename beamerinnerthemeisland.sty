\newcommand{\simple}[2]{

  \begin{frame}
    \begin{tikzpicture}[remember picture, overlay, every node/.style={anchor=center}]
    \fill[DarkGrey] (0.55\paperwidth,-\paperheight) rectangle (\paperwidth,\the\paperheight);
    
    \fill[fill overzoom image=pic1.jpg] (-\paperwidth,-\paperheight) rectangle (0.55\paperwidth,\the\paperheight);
    \fill[DarkGrey, opacity=0.7] (-\paperwidth,-\paperheight) rectangle (0.55\paperwidth,\the\paperheight);

    \node[text width=5cm, align=left, font=\color{LightGrey}] (title) at (4,0) {\usebeamerfont{frametitle}#1};
    \node[text width=5cm, align=left, right = 4cm of title, font=\color{LightGrey}\small] (content) {#2};
      
    \end{tikzpicture}
  \end{frame}
}

\newcommand{\about}[2]{

  \begin{frame}
  \begin{tikzpicture}[remember picture, overlay, every node/.style={anchor=center}]
    \node[text width=5cm, align=left] (a) at (10,1) {\usebeamerfont{frametitle}#1};
    \node[text width=5cm, align=left, below = 3cm of a, font=\small] (content) {\justifying#2};
      
    \end{tikzpicture}
  \end{frame}
}

\newcommand{\hello}[3]{

  \begin{frame}
    \begin{tikzpicture}[remember picture, overlay, every node/.style={anchor=center}]

    \fill[fill overzoom image=pic1.jpg] ($(current page.north west)+(1cm,-1cm)$) rectangle ($(current page.south west)+(3cm,1cm)$);
    \fill[LightGrey, opacity=0.7] ($(current page.north west)+(1cm,-1cm)$) rectangle ($(current page.south west)+(3cm,1cm)$);

    % Frame title
    \node[text width=5cm, align=left, font=\color{DarkGrey}] (title) at (6,0) {\usebeamerfont{frametitle}#1};
    \node[text width=5cm, align=left, font=\color{DarkGrey}\Large\bfseries, right = of title] (subtitle) at (8,0) {#2};
    \node[text width=5cm, align=left, below = 1cm of subtitle, font=\color{DarkGrey}\small] (content) {\justifying#3};
      
    \end{tikzpicture}
  \end{frame}
}

\newcommand{\helloo}[3]{

